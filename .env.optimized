# Optimized PyNucleus Environment Configuration
# For maximum performance and minimal memory usage

# === MODEL OPTIMIZATION ===
MODEL_ID=HuggingFaceTB/SmolLM2-1.7B-Instruct
EMB_MODEL=all-MiniLM-L6-v2
MAX_TOKENS=200
USE_CUDA=false
DEVICE=cpu
MODEL_CACHE_SIZE=1

# === QUANTIZATION & MEMORY ===
USE_8BIT_QUANTIZATION=true
LOAD_IN_8BIT=true
TORCH_COMPILE=false
LOW_MEM_MODE=true
MAX_MEMORY_MB=2048

# === PERFORMANCE OPTIMIZATIONS ===
BATCH_SIZE=1
MAX_CONCURRENT_REQUESTS=2
CACHE_TTL=3600
ENABLE_MODEL_CACHING=true
LAZY_LOADING=true

# === DATABASE OPTIMIZATION ===
CHROMA_PATH=data/03_intermediate/vector_db
FAISS_INDEX_PATH=data/04_models/faiss_index
CHROMA_BATCH_SIZE=100
MAX_CHROMA_RESULTS=5
RETRIEVE_TOP_K=3

# === API CONFIGURATION ===
API_HOST=localhost
API_PORT=5001
API_WORKERS=1
MAX_WORKERS=2
WORKER_TIMEOUT=30

# === LOGGING & MONITORING ===
LOG_LEVEL=WARNING
DISABLE_PROGRESS_BARS=true
QUIET_MODE=true
LOG_FILE_SIZE_MB=10
LOG_RETENTION_DAYS=7

# === TELEMETRY DISABLE ===
CHROMA_TELEMETRY=FALSE
HF_HUB_DISABLE_TELEMETRY=1
POSTHOG_DISABLED=1
WANDB_DISABLED=true
TRANSFORMERS_OFFLINE=1

# === SYSTEM OPTIMIZATION ===
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
OMP_NUM_THREADS=2
MKL_NUM_THREADS=2
TOKENIZERS_PARALLELISM=false

# === DWSIM CONFIGURATION ===
DWSIM_ENABLED=true
DWSIM_TIMEOUT=60
DWSIM_MAX_ITERATIONS=100

# === CACHE CONFIGURATION ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_MAX_MEMORY=256mb
REDIS_TTL=3600

# === ERROR HANDLING ===
MAX_RETRIES=2
RETRY_DELAY=1
GRACEFUL_SHUTDOWN=true
ERROR_RECOVERY=true